<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#outlineCreateModal">
  Create New Outline
</button>

<!-- Modal -->
<div class="modal fade" id="outlineCreateModal" tabindex="-1" role="dialog" aria-labelledby="outlineCreateModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for Outline.new, url: outlines_path do |f| %>
          <%= f.select :course_id,
                       courses.map { |c| [c.code, c.id] },
                       { include_blank: true },
                       { class: 'chosen-select' }
          %>
          <%= f.submit %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>